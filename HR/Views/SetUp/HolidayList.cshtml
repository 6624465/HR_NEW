<div class="row" ng-controller="HolidayListController">
    <div class="col-xs-12">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">
                    Holiday List
                </h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12 col-md-4">
                        <div class="form-group">
                            <label for="Location">Location</label>
                            <select name="users" ng-options="s.Id as s.CountryName for s in Countries" ng-model="CompanyDetails.Address.CountryId" class="form-control">
                                <option value="">--Select Location--</option>
                            </select>
                        </div>
                        <div class="form-group fg-line">
                            <button type="button" id="btn-SearchHolidays" class="btn btn-primary ">Search</button>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-8 text-right">
                        <button class="btn btn-primary " id="btn-add-Holiday" ng-click="addHolidayList(table)">Add an Holiday</button>
                        <button class="btn btn-primary">Excel Export</button>

                    </div>

                    <div class="modal fade in" id="AddHolidayListDialog" role="dialog">
                        <div class="modal-dialog">

                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Add Holiday</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>Date</label>

                                                <div class="dropdown">

                                                    <a class="dropdown-toggle" id="dropdown2" role="button" data-toggle="dropdown">


                                                        <div class="input-group">
                                                            @*<input type="text" class="form-control"
                                                                data-ng-model="HolidayList.Date" format="{{dateFormat}}" />*@

                                                            <input type="text" class="form-control input-sm datepicker"
                                                                   ng-model="HolidayList.Date" name="HolidayList.Date"
                                                                   date-time-input="{{dateFormat}}">
                                                            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                                        </div>
                                                    </a>
                                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                                        <datetimepicker data-ng-model="HolidayList.Date" date-format="dd/mm/yyyy"
                                                                        data-datetimepicker-config="{ dropdownSelector: '#dropdown2' , startView:'day', minView:'day' }" />
                                                    </ul>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>
                                                    Occasion
                                                </label>
                                                <input class="form-control input-mask" type="text" ng-model="HolidayList.Occasion">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>
                                                    Location
                                                </label>
                                                <select name="users" ng-options="s.Id as s.CountryName for s in Countries" ng-model="CompanyDetails.Address.CountryId" class="form-control">
                                                    <option value="">--Select Location--</option>
                                                </select>
                                                @*<input type="checkbox" ng-model="EmployeeDesignation.IsActive" />*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer" style="right: 270px;">
                                    <button class="btn btn-primary waves-effect" type="submit" ng-click="onClickSaveEmployeeDesignation(EmployeeDesignation)">Save</button>
                                    <button type="submit" class="btn btn-primary waves-effect" ng-click="onClickCancelEmployeeDesignation()">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


