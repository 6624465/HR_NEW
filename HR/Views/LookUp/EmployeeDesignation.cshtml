<div ng-controller="EmployeeDesignationController">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Employee Designation</h3>
                    <div class="add-top box-tools">
                        <a href="" class="btn btn-primary waves-effect pull-right btn-sm " ng-click="addEmployeeDesignation(table)"> <i class="zmdi zmdi-account-add"> Add Employee Designation</i></a>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div>
                    <div class="modal fade in" id="AddEmployeeDesignationDialog" role="dialog">
                        <div class="modal-dialog">

                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Add Employee Designation</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <md-input-container class="md-block" flex-gt-sm>
                                                <label>Employee Designation Name</label>
                                                <input type="text"
                                                       ng-model="EmployeeDesignation.LookUpCode"
                                                       ng-maxlength="50"
                                                        />
                                            </md-input-container>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <md-input-container class="md-block" flex-gt-sm>
                                                <label> Employee Designation Description</label>
                                                <input type="text"
                                                       ng-model="EmployeeDesignation.LookUpDescription"
                                                       ng-maxlength="50" />
                                            </md-input-container>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 col-xs-12 ">
                                            <label>
                                                <input type="checkbox"
                                                       ng-model="EmployeeDesignation.IsActive"
                                                       name="EmployeeDesignation.IsActive"
                                                        />
                                                IsActive
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer" style="right: 270px;">
                                    <button class="btn btn-primary waves-effect" type="submit" ng-click="onClickSaveEmployeeDesignation(EmployeeDesignation)">Save</button>
                                    <button type="submit" class="btn btn-primary waves-effect" ng-click="onClickCancelEmployeeDesignation()">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Employee Designation Name</th>
                                    <th>Employee Designation Description</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="employeeDesignation in EmployeeDesignations">
                                    <td><a ng-click="onEditEmployeeDesignation(employeeDesignation)">{{employeeDesignation.LookUpCode}}</a></td>
                                    <td>{{employeeDesignation.LookUpDescription}}</td>
                                    <td><input type="checkbox" ng-model="employeeDesignation.IsActive" disabled="true" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>