<div ng-controller="EmployeeDepartmentController">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Employee Department</h3>
                    <div class="pull-right">
                        <button type="button" class="btn btn-primary waves-effect m-r-15" ng-click="addEmployeeDepartment(table)">
                            <i class="zmdi zmdi-plus"></i>&nbsp; ADD
                        </button>
                    </div>
                </div>
                <div>
                    <div class="modal fade in" id="AddEmployeeDepartmentDialog" role="dialog">
                        <div class="modal-dialog">

                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Add Employee Department</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>Employee Department Name</label>
                                                <input class="form-control input-mask" type="text" ng-model="EmployeeDepartment.LookUpCode">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>
                                                    Employee Department Description
                                                </label>
                                                <input class="form-control input-mask" type="text" ng-model="EmployeeDepartment.LookUpDescription">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>
                                                    IsActive
                                                </label>
                                                <input type="checkbox" ng-model="EmployeeDepartment.IsActive" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer" style="right: 270px;">
                                    <button class="btn btn-primary waves-effect" type="submit" ng-click="onClickSaveEmployeeDepartment(EmployeeDepartment)">Save</button>
                                    <button type="submit" class="btn btn-primary waves-effect" ng-click="onClickCancelEmployeeDepartment()">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>#Action</th>
                                    <th>Employee Department Name</th>
                                    <th>Employee Department Description</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="employeeDepartment in EmployeeDepartments">
                                    <td>
                                        <button type="button" ng-click="onEditEmployeeDepartment(employeeDepartment);" class="btn btn-default ng-scope waves-effect" aria-label="button">
                                            <i class="zmdi zmdi-edit" aria-hidden="true"></i>
                                        </button>
                                    </td>
                                    <td><a ng-click="onEditEmployeeDepartment(employeeDepartment)">{{employeeDepartment.LookUpCode}}</a></td>
                                    <td>{{employeeDepartment.LookUpDescription}}</td>
                                    <td><input type="checkbox" ng-model="employeeDepartment.IsActive" disabled /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>