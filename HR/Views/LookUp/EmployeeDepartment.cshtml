<div ng-controller="EmployeeDepartmentController">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Employee Department</h3>
                    <div class="add-top box-tools">
                        <a href="" class="btn btn-primary waves-effect pull-right btn-sm " ng-click="addEmployeeDepartment(table)"> <i class="zmdi zmdi-account-add"> Add Employee Department</i></a>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div>
                    <div class="modal fade in" id="AddEmployeeDepartmentDialog" role="dialog">
                        <div class="modal-dialog">

                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Add Employee Department</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <md-input-container class="md-block" flex-gt-sm>
                                                <label> Employee Department Name</label>
                                                <input type="text"
                                                       ng-model="EmployeeDepartment.LookUpCode"
                                                       ng-maxlength="50" />
                                            </md-input-container>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <md-input-container class="md-block" flex-gt-sm>
                                                <label> Employee Department Description</label>
                                                <input type="text"
                                                       ng-model="EmployeeDepartment.LookUpDescription"
                                                       ng-maxlength="50" />
                                            </md-input-container>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 col-xs-12 ">
                                            <label>
                                                <input type="checkbox"
                                                       ng-model="EmployeeDepartment.IsActive"
                                                       name="EmployeeDepartment.IsActive" />
                                                IsActive
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer" style="right: 270px;">
                                    <button class="btn btn-primary waves-effect" type="submit" ng-click="onClickSaveEmployeeDepartment(EmployeeDepartment)">Save</button>
                                    <button type="submit" class="btn btn-primary waves-effect" ng-click="onClickCancelEmployeeDepartment()">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Employee Department Name</th>
                                    <th>Employee Department Description</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="employeeDepartment in EmployeeDepartments">
                                    <td><a ng-click="onEditEmployeeDepartment(employeeDepartment)">{{employeeDepartment.LookUpCode}}</a></td>
                                    <td>{{employeeDepartment.LookUpDescription}}</td>
                                    <td><input type="checkbox" ng-model="employeeDepartment.IsActive" disabled /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>