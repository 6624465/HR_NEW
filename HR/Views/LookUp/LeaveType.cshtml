<div ng-controller="LeaveTypeController">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Leave Type</h3>
                    <div class="pull-right">
                        <button type="button" class="btn btn-primary waves-effect btn-xs m-r-15" ng-click="addLeaveType(table)">
                            <i class="zmdi zmdi-plus"></i>&nbsp; ADD
                        </button>
                    </div>
                </div>
                <div>
                    <div class="modal fade in" id="AddLeaveTypeDialog" role="dialog">
                        <div class="modal-dialog">

                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Add Leave Type</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>Leave Type Name</label>
                                                <input class="form-control input-mask" type="text" ng-model="LeaveType.LookUpCode" ng-required="true">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>
                                                    Leave Type Description
                                                </label>
                                                <input class="form-control input-mask" type="text" ng-model="LeaveType.LookUpDescription" ng-required="true">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>
                                                    IsActive
                                                </label>
                                                <input type="checkbox" ng-model="LeaveType.IsActive" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer" style="right: 270px;">
                                    <button class="btn btn-primary waves-effect" type="submit" ng-click="onClickSaveLeaveType(LeaveType)">Save</button>
                                    <button type="submit" class="btn btn-primary waves-effect" ng-click="onClickCancelLeaveType()">Cancel</button>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="table-responsive">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>#Action</th>
                                    <th>Leave Type Name</th>
                                    <th>Leave Type  Description</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="LeaveType in LeaveTypes">
                                    <td>
                                        <button type="button" ng-click="onEditLeaveType(LeaveType);" class="btn btn-default ng-scope waves-effect" aria-label="button">
                                            <i class="zmdi zmdi-edit" aria-hidden="true"></i>
                                        </button>
                                    </td>
                                    <td><a ng-click="onEditLeaveType(LeaveType)">{{LeaveType.LookUpCode}}</a></td>
                                    <td>{{LeaveType.LookUpDescription}}</td>
                                    <td><input type="checkbox" ng-model="LeaveType.IsActive" disabled /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>