<div ng-controller="LeaveTypeController">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Leave Type</h3>
                    <div class="add-top box-tools">
                        <a href="" class="btn btn-primary waves-effect pull-right btn-sm " ng-click="addLeaveType(table)"> <i class="zmdi zmdi-account-add"> Add Leave Type</i></a>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div>
                    <div class="modal fade in" id="AddLeaveTypeDialog" role="dialog">
                        <div class="modal-dialog">

                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Add Leave Type</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <md-input-container class="md-block" flex-gt-sm>
                                                <label> Leave Type Name</label>
                                                <input type="text"
                                                       ng-model="LeaveType.LookUpCode"
                                                       ng-maxlength="50" />
                                            </md-input-container>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <md-input-container class="md-block" flex-gt-sm>
                                                <label> Leave Type Description</label>
                                                <input type="text"
                                                       ng-model="LeaveType.LookUpDescription"
                                                       ng-maxlength="50" />
                                            </md-input-container>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 col-xs-12 ">
                                            <label>
                                                <input type="checkbox"
                                                       ng-model="LeaveType.IsActive"
                                                       name="LeaveType.IsActive" />
                                                IsActive
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer" style="right: 270px;">
                                    <button class="btn btn-primary waves-effect" type="submit" ng-click="onClickSaveLeaveType(LeaveType)">Save</button>
                                    <button type="submit" class="btn btn-primary waves-effect" ng-click="onClickCancelLeaveType()">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Leave Type Name</th>
                                    <th>Leave Type  Description</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="LeaveType in LeaveTypes">
                                    <td><a ng-click="onEditLeaveType(LeaveType)">{{LeaveType.LookUpCode}}</a></td>
                                    <td>{{LeaveType.LookUpDescription}}</td>
                                    <td><input type="checkbox" ng-model="LeaveType.IsActive" disabled /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>