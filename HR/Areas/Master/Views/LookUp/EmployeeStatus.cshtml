<div ng-controller="EmployeeStatusController" class="row">
    <form id="frmEmployeeStatus" name="frmEmployeeStatus" ng-submit="onClickSaveEmployeeStatus(EmployeeStatus)" novalidate ng-class="{'submitted':submitted}">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Employee Status</h3>
                    <div class="pull-right">
                        <button type="button" class="btn" ng-click="addEmployeeStatus(table)" has-Right data-rightValue="EmployeeStatus.Add">
                            <i class="zmdi zmdi-plus"></i>&nbsp; ADD
                        </button>
                    </div>
                </div>
                <div>
                    <div class="modal fade in" id="AddEmployeeStatusDialog" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Add Employee Status</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>Employee Status Name</label>
                                                <input class="form-control input-mask" type="text" ng-model="EmployeeStatus.LookUpCode" ng-required="true">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>
                                                    Employee Status Description
                                                </label>
                                                <input class="form-control input-mask" type="text" ng-model="EmployeeStatus.LookUpDescription" ng-required="true">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-3">
                                            <div class="switch-container">
                                                <label class="switch-label">
                                                    IsActive
                                                </label>
                                                <label class="switch pull-right">
                                                    <input type="checkbox" ng-model="EmployeeStatus.IsActive">
                                                    <span class="slider round"></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer" style="right: 270px;">
                                    <button class="btn" type="submit" ng-click="submitted = true;" has-Right data-rightValue="EmployeeStatus.Save">Save</button>
                                    <button type="submit" class="btn btn-default" ng-click="onClickCancelEmployeeStatus()" has-Right data-rightValue="EmployeeStatus.Cancel">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>#Action</th>
                                    <th>Employee Status Name</th>
                                    <th>Employee Status Description</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="employeeStatus in EmployeeStatuses">
                                    <td>
                                        <button type="button" ng-click="onEditEmployeeStatus(employeeStatus);" class="btn btn-default ng-scope waves-effect" aria-label="button" has-Right data-rightValue="EmployeeStatus.Edit">
                                            <i class="zmdi zmdi-edit" aria-hidden="true"></i>
                                        </button>
                                    </td>
                                    <td><a ng-click="onEditEmployeeStatus(employeeStatus)">{{employeeStatus.LookUpCode}}</a></td>
                                    <td>{{employeeStatus.LookUpDescription}}</td>
                                    @*<td><input type="checkbox" ng-model="employeeDepartment.IsActive" disabled /></td>*@
                                    <td>
                                        <div class="switch-container">
                                            <label class="switch">
                                                <input type="checkbox" ng-model="employeeStatus.IsActive" disabled>
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
        </form>
</div>