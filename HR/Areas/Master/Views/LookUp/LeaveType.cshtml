<div ng-controller="LeaveTypeController" >
    <form id="frmLeaveType" name="frmLeaveType" ng-submit="onClickSaveLeaveType(LeaveType)" ng-class="{'submitted':submitted}" novalidate>
    <div class="row">
        <div class="col-md-12">

            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Leave Type</h3>
                    <div class="pull-right">
                        <button type="button" class="btn" ng-click="addLeaveType(table)" has-Right data-rightValue="LeaveType.Add">
                            <i class="zmdi zmdi-plus"></i>&nbsp; ADD
                        </button>
                    </div>
                </div>
                <div>
                    <div class="modal fade in" id="AddLeaveTypeDialog" role="dialog">
                        <div class="modal-dialog">

                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Add Leave Type</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>Leave Type Name</label>
                                                <input class="form-control input-mask" type="text" ng-model="LeaveType.LookUpCode" ng-required="true">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-8">
                                            <div class="form-group fg-line">
                                                <label>
                                                    Leave Type Description
                                                </label>
                                                <input class="form-control input-mask" type="text" ng-model="LeaveType.LookUpDescription" ng-required="true">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12 col-md-3">
                                            <div class="switch-container">
                                                <label class="switch-label">
                                                    IsActive
                                                </label>
                                                <label class="switch pull-right">
                                                    <input type="checkbox" ng-model="LeaveType.IsActive">
                                                    <span class="slider round"></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer" style="right: 270px;">
                                    <button class="btn" type="submit" ng-click="submitted = true;" has-Right data-rightValue="LeaveType.Save">Save</button>
                                    <button type="submit" class="btn btn-default" ng-click="onClickCancelLeaveType()" has-Right data-rightValue="LeaveType.Cancel">Cancel</button>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="table-responsive">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>#Action</th>
                                    <th>Leave Type Name</th>
                                    <th>Leave Type  Description</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="LeaveType in LeaveTypes">
                                    <td>
                                        <button type="button" ng-click="onEditLeaveType(LeaveType);" class="btn btn-default ng-scope waves-effect" aria-label="button" has-Right data-rightValue="LeaveType.Edit">
                                            <i class="zmdi zmdi-edit" aria-hidden="true"></i>
                                        </button>
                                    </td>
                                    <td><a ng-click="onEditLeaveType(LeaveType)">{{LeaveType.LookUpCode}}</a></td>
                                    <td>{{LeaveType.LookUpDescription}}</td>
                                    @*<td><input type="checkbox" ng-model="LeaveType.IsActive" disabled /></td>*@
                                    <td>
                                        <div class="switch-container">
                                            <label class="switch">
                                                <input type="checkbox" ng-model="LeaveType.IsActive" disabled>
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
        </form>
</div>