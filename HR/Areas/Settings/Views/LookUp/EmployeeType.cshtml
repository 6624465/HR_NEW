<div ng-controller="EmployeeTypeController">
    <form id="frmEmployeeType" name="frmEmployeeType" ng-submit="onClickSaveEmployeeType(EmployeeType)" ng-class="{'submitted':submitted}" novalidate>
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Employee Type</h3>
                        <div class="pull-right">
                            <button type="button" class="button" ng-click="addEmployeeType(table)" has-Right data-rightValue="EmployeeType.Add">
                                <i class="zmdi zmdi-plus"></i>&nbsp; ADD
                            </button>
                        </div>
                    </div>
                    <div>
                        <div class="modal fade in" id="AddEmployeeTypeDialog" role="dialog">
                            <div class="modal-dialog">

                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Add Employee Type</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-xs-12 col-md-8">
                                                <div class="form-group fg-line">
                                                    <label>Employee Type Name</label>
                                                    <input class="form-control input-mask" type="text" ng-model="EmployeeType.LookUpCode" ng-required="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-8">
                                                <div class="form-group fg-line">
                                                    <label>
                                                        Employee Type Description
                                                    </label>
                                                    <input class="form-control input-mask" type="text" ng-model="EmployeeType.LookUpDescription" ng-required="true">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-md-3">
                                                <div class="switch-container">
                                                    <label class="switch-label">
                                                        IsActive
                                                    </label>
                                                    <label class="switch pull-right">
                                                        <input type="checkbox" ng-model="EmployeeType.IsActive">
                                                        <span class="slider round"></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer" style="right: 270px;">
                                        <button class="btn" type="submit" ng-click="submitted = true;" has-Right data-rightValue="EmployeeType.Save">Save</button>
                                        <button type="submit" class="btn btn-default" ng-click="onClickCancelEmployeeType()" has-Right data-rightValue="EmployeeType.Cancel">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>#Action</th>
                                        <th>Employee Type Name</th>
                                        <th>Employee Type Description</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="employeeType in EmployeeTypes">
                                        <td>
                                            <button type="button" ng-click="onEditEmployeeType(employeeType);" class="btn btn-default ng-scope waves-effect" aria-label="button" has-Right data-rightValue="EmployeeType.Edit">
                                                <i class="zmdi zmdi-edit" aria-hidden="true"></i>
                                            </button>
                                        </td>
                                        <td><a ng-click="onEditEmployeeType(employeeType)">{{employeeType.LookUpCode}}</a></td>
                                        <td>{{employeeType.LookUpDescription}}</td>
                                        @*<td><input type="checkbox" ng-model="employeeType.IsActive" disabled="true" /></td>*@
                                        <td>
                                            <div class="switch-container">
                                                <label class="switch">
                                                    <input type="checkbox" ng-model="employeeType.IsActive" disabled>
                                                    <span class="slider round"></span>
                                                </label>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>